# ===========================================
# Samsung AI Ad Generator - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ===========================================

# App Configuration
APP_NAME=SaiAd
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/saiad

# Redis
REDIS_URL=redis://localhost:6379/0

# ===========================================
# AI Service API Keys
# ===========================================

# Google AI Studio (Gemini + Imagen) - Required for Storyboard
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# Anthropic Claude - Required for Script Generation
# Get your key at: https://console.anthropic.com
ANTHROPIC_API_KEY=

# Runway ML - Required for Video Generation
# Get your key at: https://runwayml.com
RUNWAY_API_KEY=

# ElevenLabs - Required for Voice Generation
# Get your key at: https://elevenlabs.io
ELEVENLABS_API_KEY=

# Suno AI - Optional for Music Generation
# Get your key at: https://suno.ai
SUNO_API_KEY=

# OpenAI - Optional (alternative to Claude)
OPENAI_API_KEY=

# Replicate - Optional
REPLICATE_API_KEY=

# Mubert - Optional (alternative music)
MUBERT_API_KEY=

# ===========================================
# OAuth (Social Login)
# ===========================================

# Google OAuth
# Setup at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Kakao OAuth
# Setup at: https://developers.kakao.com
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# ===========================================
# Payment (TossPayments)
# ===========================================
# Setup at: https://developers.tosspayments.com
TOSS_CLIENT_KEY=
TOSS_SECRET_KEY=

# ===========================================
# AWS (Optional - for file storage)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET=saiad-assets
CLOUDFRONT_DOMAIN=
